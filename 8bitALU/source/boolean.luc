module boolean (
    input alufn[4],
    input a[8],  
    input b[8],  
    output boole[8]
    ) 
  
  {
  var i;   
  
  always {
    for (i=0; i<8; i++){ //for 8-bits   
     
      if (a ==0 && b == 0){
      boole[i] = alufn[0];
      }
      else if (a == 0 && b == 1){
      boole[i] = alufn[1];
      }
      else if (a==1 && b ==0){
      boole[i]= alufn[2];
      }
      else 
      boole[i] = alufn[3];
      }//for
  }
}
