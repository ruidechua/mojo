module mojo_adder (
    	input a[8],
	    input b[8],
	    input alufn0,
	    output sum[8],
    output z,
    output n,
    output v
 ) 
	{
		always {
		case(alufn0) {
		1: sum = a - b;
	
		0: sum = a + b;
  
   default: sum = 8b00000000;
		}
    
    if (sum==0) {
    z = 1;
    }
    else {
    z = 0;
    }
    
    if (sum[7] == 1) {
    n = 1;
    }
    else {
    n = 0;
    }
    
    
    v = a[7]&(b[7]^alufn0)&(sum[7]~) | (a[7]~)&(b[7]^alufn0)&(sum[7]);
		}
	}
